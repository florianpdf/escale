{% extends 'base.html.twig' %}

{% block body %}
    <h1>Editer la categorie</h1>

    <div class="row">
        <div class="col s6 offset-s3">
            {{ form_start(edit_form, { 'attr': {'class': 'form_create col s12'} }) }}

            <div class="input-field col s12">
                <div class="row">
                    {{ form_label(edit_form.catLib) }}
                    {{ form_errors(edit_form.catLib) }}
                    {{ form_widget(edit_form.catLib) }}
                </div>
            </div>
            <div class="col s12 file-field input-field">
                <div class="btn">
                    <span>Photo de la categorie</span>
                    {{ form_errors(edit_form.phPicto) }}
                    {{ form_widget(edit_form.phPicto) }}
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Ajouter une photo">
                </div>
            </div>
            <div class="form_bouton">
                <button class="btn waves-effect waves-light" type="submit" name="action">Modifier la categorie
                    <i class="material-icons right"></i>
                </button>
                <a class="waves-effect waves-light btn" href="{{ path('admin_categ_index') }}">Retour à la liste des catégories</a>
            </div>
        {{ form_end(edit_form) }}

            <div class="form_bouton">
                {{ form_start(delete_form) }}
                <button class="btn waves-effect waves-light" type="submit" name="action">Supprimer la catégorie</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
