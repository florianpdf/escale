{% extends 'base.html.twig' %}

{% block body %}
    <h1>Création d'une catégorie</h1>

<div class="row">
    <div class="col s6 offset-s3">
        {{ form_start(form, { 'attr': {'class': 'form_create col s12'} }) }}

        <div class="input-field col s12">
            <div class="row">
                {{ form_label(form.catLib) }}
                {{ form_errors(form.catLib) }}
                {{ form_widget(form.catLib) }}
            </div>
        </div>
        <div class="col s12 file-field input-field">
            <div class="btn">
                <span>Photo de catégorie</span>
                {{ form_errors(form.phPicto) }}
                {{ form_widget(form.phPicto) }}
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="Ajouter une photo">
            </div>
        </div>
        <div class="form_bouton">
            <button class="btn waves-effect waves-light" type="submit" name="action">Créer la catégorie
                <i class="material-icons right"></i>
            </button>
            <a class="waves-effect waves-light btn" href="{{ path('admin_categ_index') }}">Retour à la liste des catégorie</a>
        </div>
    {{ form_end(form) }}
{% endblock %}